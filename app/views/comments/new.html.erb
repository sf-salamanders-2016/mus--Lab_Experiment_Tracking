<h1>Add comment</h1>

<%= form_for @comment, url: {action: "create"} do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :experiment_id, :value => @experiment.id %>
  <%= f.label :comment %>
  <%= f.text_field :text %>
  <%= f.submit value="Submit" %>
<% end %>

